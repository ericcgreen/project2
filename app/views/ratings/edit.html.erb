<div class="app_body">

  <div class="screen">
    <button type="button" class="shutter_button">
     <%= link_to "Back", cities_path %>
    </button>
  </div>

<h1> Edit Rating </h1>


<%= form_for [@city, @rating] do |f| %>

<article>
<p>
  <h3>
    <%= f.label :safety_rating, "How would you rate this city overall?" %>
  </h3>
</p>

<p>
  <%= f.number_field :overall_rating, min: 1, max: 5 %>
</p>


<p>
  <h3>
    <%= f.label :safety_rating, "How would you rate the safety of this city?" %>
  </h3>
</p>

<p>
  <%= f.number_field :safety_rating, min: 1, max: 5 %>
</p>


<p>
  <h3>
    <%= f.label :comment, "Comments about Safety" %>
  </h3>
</p>

<p>
  <%= f.text_area :comment %>
</p>

<p>
  <h3>
    <%= f.label :recommendations, "Things to Do:" %>
  </h3>
</p>

<p>
  <%= f.text_area :recommendations %>
</p>

<p>
  <h3>
    <%= f.label :user_photo, "Add a photo:" %>
  </h3>
</p>

<p>
  <%= f.text_field :user_photo %>
</p>
</article>
<p>
  <%= f.submit %>
</p>

<% end %>

<button type="button">
  <%= link_to "Delete", city_rating_path(@city, @rating), method: :delete %>
</button>

</div>

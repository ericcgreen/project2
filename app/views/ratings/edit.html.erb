<div class="app_body">

  <div class="screen">
    <button type="button" class="shutter_button">
     <%= link_to "Back", cities_path %>
    </button>
  </div>

<h1> Edit Rating </h1>


<%= form_for [@city, @rating] do |f| %>

<article>
<p>
  <h3>
    <%= f.label :safety_rating, "How would you rate this city overall?" %>
  </h3>
</p>

<p>
  <div class="star-box">
  <img src="<%= image_url("star.png") %>" id="star-1">
  <img src="<%= image_url("star.png") %>" id="star-2">
  <img src="<%= image_url("star.png") %>" id="star-3">
  <img src="<%= image_url("star.png") %>" id="star-4">
  <img src="<%= image_url("star.png") %>" id="star-5">
  <div class="star-bar"></div>
  <%= f.hidden_field :overall_rating, id: "star-val" %>
</div>
</p>


<p>
  <h3>
    <%= f.label :safety_rating, "How would you rate the safety of this city?" %>
  </h3>
</p>

<p>
  <div class="star-box">
  <img src="<%= image_url("star.png") %>" id="star-1b">
  <img src="<%= image_url("star.png") %>" id="star-2b">
  <img src="<%= image_url("star.png") %>" id="star-3b">
  <img src="<%= image_url("star.png") %>" id="star-4b">
  <img src="<%= image_url("star.png") %>" id="star-5b">
  <div class="star-bartwo"></div>
  <%= f.hidden_field :safety_rating, id: "star-val2" %>
</div>
</p>


<p>
  <h3>
    <%= f.label :comment, "Comments about Safety" %>
  </h3>
</p>

<p>
  <%= f.text_area :comment %>
</p>

<p>
  <h3>
    <%= f.label :recommendations, "Things to Do:" %>
  </h3>
</p>

<p>
  <%= f.text_area :recommendations %>
</p>

<p>
  <h3>
    <%= f.label :user_photo, "Add a photo:" %>
  </h3>
</p>

<p>
  <%= f.text_field :user_photo %>
</p>
</article>
<p>
  <%= f.submit %>
</p>

<% end %>

<button type="button">
  <%= link_to "Delete", city_rating_path(@city, @rating), method: :delete %>
</button>

</div>

<div class="app_body">

  <div class="screen">
    <button type="button" class="shutter_button">
     <%= link_to "Back", cities_path %>
    </button>
  </div>

<h1> Edit City Information </h1>

<%= form_for @city do |f| %>
<article>
<p>
  <h3>
    <%= f.label :name, "City Name" %>
  </h3>
</p>

<p>
  <%= f.text_field :name %>
</p>

<p>
  <h3>
    <%= f.label :country, "Country Name" %>
  </h3>
</p>

<p>
  <%= f.text_field :country %>
</p>

<p>
  <h3>
    <%= f.label :photo, "Add a City Skyline Photo:" %>
  </h3>
</p>

<p>
  <%= f.text_field :photo %>
</p>
</article>
<p>
  <%= f.submit %>
</p>

<% end %>

<button type="button">
<%= link_to "Delete", city_path(@city), method: :delete %>
</button>


</div>
